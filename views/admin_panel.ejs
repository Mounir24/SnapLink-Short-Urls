                    </tbody>
                </table>
            </div>
            <!--<div class="col-md-2"></div>
            <div class="col-md-5 text-center">
                <canvas id="doughnut" width="400" height="400"></canvas>
            </div>-->
        </div>
    </div>
    <div class="container-fluid mb-5">
        <div class="row mx-auto w-80">
            <div class="col-md-12">
                <!-- TABALE AREA -->
                <table class="table table-striped mt-5 text-center ">
                    <thead class="thead-bg ">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Username</th>
                            <th scope="col">E-mail</th>
                            <th scope="col">IP Address</th>
                            <th scope="col">country</th>
                            <th scope="col">Status</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>

                        <% totalUsers.map((user , index)=> { %>
                            <tr>
                                <td>
                                    <%= index +1 %>
                                </td>
                                <td>
                                    <span class="user__name">
                                        <img src="/svg/user.png" class="mr-2" width="30" height="30"
                                            alt="<%= user.username.substr(0,1) %>" data-toggle="tooltip"
                                            data-placement="top" title="<%= user.username %>">
                                        <%= user.username %>
                                    </span>
                                </td>
                                <td class="text-center mx-auto">
                                    <%= user.email %>
                                        <span class="verified_url"><i class='bx bxs-check-shield' data-toggle="tooltip"
                                                data-placement="right" title="E-mail Verified"></i>
                                        </span>
                                </td>
                                <td style="text-align: center;">
                                    <!--<span class="badge badge-success">Active</span>-->
                                    <div class="usr-p">
                                        <%= user.geo[0].ip %>
                                    </div>
                                </td>
                                <td class="text-center">
                                    <div class="country d-flex justify-content-center align-items-center">
                                        <%= user.geo[0].country %>
                                            <span class="flag">
                                                <img src="<%= user.geo[0].country_flag %>"
                                                    alt="<%= user.geo[0].country %>" class="img-fluid"
                                                    data-toggle="tooltip" data-placement="top"
                                                    title="<%= user.geo[0].country %>">
                                            </span>
                                    </div>
                                </td>
                                <td class="text-center">
                                    <% if(user.isBlocked) { %>
                                        <p class="text-danger">
                                            Blocked
                                        </p>
                                        <%} else { %>
                                            <p class="text-success">
                                                Active
                                            </p>
                                            <% } %>
                                </td>
                                <td>
                                    <button data-id="<%= user._id %>" class="btn remove-btn" data-toggle="tooltip"
                                        data-placement="top" title="Remove">
                                        <i class='bx bxs-trash'></i>
                                    </button>
                                    <% if(user.isBlocked) { %>
                                        <button data-id="<%= user._id %>" class="btn unblock-btn" data-toggle="tooltip"
                                            data-placement="top" title="Unblock">
                                            <i class='bx bxs-lock-open'></i>
                                        </button>
                                        <%} else { %>
                                            <button data-id="<%= user._id %>" class="btn block-btn"
                                                data-toggle="tooltip" data-placement="top" title="Block">
                                                <i class='bx bx-block'></i>
                                            </button>
                                            <% } %>
                                                <button class="btn" data-toggle="modal"
                                                    data-target="#<%= user.username %>">
                                                    <i class='bx bx-send' data-toggle="tooltip" data-placement="top"
                                                        title="Send E-mail"></i>
                                                </button>
                                                <!-- E-MAIL MODAL FORM -->
                                                <!-- Modal -->
                                                <div class="modal fade" id="<%= user.username %>" tabindex="-1"
                                                    aria-labelledby="exampleModalLabel" aria-hidden="true">
                                                    <div class="modal-dialog modal-dialog-centered">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h5 class="modal-title" id="exampleModalLabel">Send
                                                                    E-mail</h5>
                                                                <button type="button" class="close" data-dismiss="modal"
                                                                    aria-label="Close">
                                                                    <i class='bx bx-x'></i>
                                                                </button>
                                                            </div>
                                                            <div class="modal-body">
                                                                <form id="email_form" class="email_form">
                                                                    <div class="form-row">
                                                                        <!-- E-mail Col 1 -->
                                                                        <div class="form-group col-md-6">
                                                                            <label for="user-email">Email:</label>
                                                                            <input type="email" class="form-control"
                                                                                id="user-email" name="userEmail"
                                                                                value="<%= user.email %>"
                                                                                placeholder="User E-mail">
                                                                        </div>
                                                                        <!-- Username Col 2 -->
                                                                        <div class="form-group col-md-6">
                                                                            <label for="user-username">username:</label>
                                                                            <input type="text" class="form-control"
                                                                                name="username"
                                                                                value="<%= user.username %>"
                                                                                id="user-username"
                                                                                placeholder="User Username">
                                                                        </div>
                                                                        <div class="form-row">
                                                                            <!-- Message Area Col 1 -->
                                                                            <div class="form-group col-md-12">
                                                                                <label
                                                                                    for="user-message">Message:</label>
                                                                                <textarea name="userMessage"
                                                                                    class="form-control"
                                                                                    id="user-message" cols="30" rows="5"
                                                                                    placeholder="Enter A Message"></textarea>
                                                                                <div class="invalid-feedback">
                                                                                    Please enter a message in the
                                                                                    textarea.
                                                                                </div>
                                                                            </div>
                                                                            <div class="form-group col-md-12">
                                                                                <label for="email-type">E-mail
                                                                                    Type:</label>
                                                                                <select class="custom-select"
                                                                                    id="email-type" name="emailType"
                                                                                    required>
                                                                                    <option value="choose one">
                                                                                        Choose...</option>
                                                                                    <option value="Account Risk">Account
                                                                                        Risk
                                                                                    </option>
                                                                                    <option value="Data Leak">Data Leak
                                                                                    </option>
                                                                                    <option value="Access Controll">
                                                                                        Access Controll
                                                                                    </option>
                                                                                </select>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                    <button type="submit" class="btn email-form-btn"
                                                                        id="email-btn">Send</button>
                                                                </form>
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn email-close-btn"
                                                                    data-dismiss="modal">Close</button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                </td>
                                <% }) %>
                            </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <footer class="container-fluid bg-light d-flex justify-content-center align-items-center">
        <div class="row mx-auto w-75">
            <div class="col-md-3 mx-auto">
                <div class="logo">
                    <img src="/svg/snapLink-logo.svg" alt="SnapLink" class="img-fluid">
                </div>
            </div>
            <div class="col-md-2"></div>
            <div class="col-md-7 my-auto">
                <ul class="my-auto d-flex justify-content-between align-items-center">
                    <li class="list-item">
                        <a href="/" class="item-link">Home</a>
                    </li>
                    <li class="list-item">

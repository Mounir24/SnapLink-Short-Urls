    <!-- START MAIN SECTION -->
    <div class="container statics_pannel">
        <!-- STATISTICS PANNEL AREA -->
        <div class="row w-100 mx-auto">
            <div class="col-md-4 text-center">
                <div class="pannel_box" data-tilt>
                    <div class="pannel__content">
                        <!-- PANNEL LABEL -->
                        <span class="pannel_label">Total Users:</span>
                        <span class="pannel_number">
                            <% if(totalUsers) { %>
                                <%= totalUsers.length %>
                                    <% } else { %>
                                        +0
                                        <% } %>
                        </span>

                    </div>
                </div>
            </div>
            <div class="col-md-4 text-center">
                <div class="pannel_box" data-tilt>
                    <div class="pannel__content">
                        <!-- PANNEL LABEL -->
                        <span class="pannel_label">Total Links:</span>
                        <span class="pannel_number">
                            <%= totalUrls %>
                        </span>
                    </div>
                </div>
            </div>
            <div class="col-md-4 text-center">
                <div class="pannel_box" data-tilt>
                    <div class="pannel__content">
                        <!-- PANNEL LABEL -->

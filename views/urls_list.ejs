    <main class="snplink_url_list_section">
    <div class="container w-100 xl-hgt">
        <div class="row mx-auto w-100">
            <div class="col-md-12">
                <!-- TABALE AREA -->
                <table class="table table-striped mt-5 text-center ">
                    <thead class="thead-bg">
                        <tr>
                            <th scope="col">Original Url</th>
                            <th scope="col">Short Url</th>
                            <th scope="col">Clicks</th>
                            <th scope="col">Created by</th>
                            <th scope="col">Qr Code</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if(urls.length==0 || urls==null || urls==undefined) { %>
                            <div class="alert alert-info w-25" role="alert">
                                <div class="d-flex justify-content-around align-items-center">
                                    <i class='bx bx-error'></i>
                                    <span>No URLs found!</span>
                                </div>
                            </div>
                            <%} %>
                                <% urls.map(url=> { %>
                                    <tr>
                                        <td>
                                            <div class="url">
                                                <%= url.original_url %>
                                            </div>
                                            <span class="date">
                                                <%= url.date %>
                                            </span>
                                            <% if(url.original_url.startsWith('https')) { %>
                                                <span class="verified_url"><i class='bx bxs-check-shield' data-toggle="tooltip" data-placement="right"
                                                        title="Secure URL"></i></span>
                                                <% } else{ %>
                                                    <span class="insecure_url"><i class='bx bxs-check-shield' data-toggle="tooltip" data-placement="right"
                                                            title="Insecure URL"></i></span>
                                                    <%} %>
                                            <span class="user-id">
                                                <%= url.createdBy %>
                                            </span>
                                        </td>
                                        <td class="text-center mx-auto">
                                            <input type="text" class="ipt-trgt" readonly="true"
                                                value="<%= originUrl + url.short_url %>">

                                            <i class='bx bx-copy cpy-btn' title="copy"></i>
                                        </td>
                                        <td id="clicks" style="text-align: center;">
                                            <%= url.clicks %>
                                        </td>
                                        <td class="texr-center">
                                            <span class="c_by">
                                                <%= url.createdBy %>
                                            </span>
                                        </td>
                                        <td>
                                            <a href="<%=url.qrcode%>" download='<%= url.short_url %>'
                                                title="Download QR Code">
                                                <img src="<%=url.qrcode%>" alt="qrcode-client" class="img-fluid"
                                                    style="width: 50px; height:50px">
                                            </a>
                                        </td>
                                        <td>
                                            <button data-id="<%= url._id %>" class="btn rv-btn">
                                                <i class='bx bxs-trash'></i>
                                            </button>
                                        </td>
                                        <% }) %>
                                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
